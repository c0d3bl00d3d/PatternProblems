            Console.Write("* ");
        }
        k_1--;
        Console.Write("\n");
    }
// Problem - 8
*****
 ****
  ***
   **
    *
    
// Solution :-

> C#
int n = 5, k_1 = n;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<i;j++)
        {
            Console.Write(" ");
        }
        for(int k=0;k<=k_1-1;k++)
        {
            Console.Write("*");
        }
        k_1--;
        Console.Write("\n");
    }
