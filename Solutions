// Problem - 1
    * 
   * * 
  * * * 
 * * * * 
* * * * *

// Solution :-

> C#
int n = 5;
      int j_1 = n;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<j_1;j++)
        {
            Console.Write(" ");
        }
        j_1--;
        for(int k=0;k<=i;k++)
        {
            Console.Write("* ");
        }
        Console.Write("\n");
    }

